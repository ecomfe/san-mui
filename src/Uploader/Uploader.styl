@require '../css/variable.styl'

.upload
    height: 30px
    width: 90px
    position: relative
    text-align: center
    line-height: 30px
    span
        float: left
        width: 100%
    input
        position: absolute
        left: 0
        width: 100%
        height: 100%
        opacity: 0
.upload-drag
    border: dashed 1px #cccccc
    width: 150px
    height: 150px
.file-list
    width: 100%
    display: inline-block
    position: relative
    .close
        transform:rotate(45deg)
        display: inline-block
    .progress
        display: inline-block
        position: absolute
        width: 0
        height: 3px
        background: green
        left: 0px
        bottom: 0px



